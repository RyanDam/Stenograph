<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="249dp"
            android:layout_height="230dp"
            android:id="@+id/imageView5"
            android:layout_gravity="top|center"
            android:src="@drawable/sync_logo"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/sync_text"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/text_note_color" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp">

            <Button
                android:layout_width="@dimen/button_length"
                android:layout_height="@dimen/button_height"
                android:text="@string/backup_button"
                android:id="@+id/backup_bt"
                android:background="@drawable/button_style"
                android:textColor="@color/button_color"
                android:padding="@dimen/padding_button_text"
                android:layout_marginRight="@dimen/padding_button"
                android:textSize="@dimen/text_size_button" />

            <Button
                android:layout_width="@dimen/button_length"
                android:layout_height="@dimen/button_height"
                android:text="@string/restore_button"
                android:id="@+id/restore_bt"
                android:background="@drawable/button_style"
                android:textColor="@color/button_color"
                android:padding="@dimen/padding_button_text"
                android:layout_marginLeft="@dimen/padding_button"
                android:textSize="@dimen/text_size_button" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>